# ============================================
# Environment Configuration
# Copy this file to .env and update values
# ============================================

# ==========================================
# Application Settings
# ==========================================
APP_NAME="Agentic OSINT Analyst"
APP_VERSION="0.1.0"
ENVIRONMENT="development"  # development, staging, production
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR

# ==========================================
# Neo4j Configuration
# ==========================================
NEO4J_URI="bolt://localhost:7687"
NEO4J_USERNAME="neo4j"
NEO4J_PASSWORD="osint_password_2026"
NEO4J_DATABASE="neo4j"
NEO4J_MAX_CONNECTIONS=50

# ==========================================
# Kafka Configuration
# ==========================================
KAFKA_BOOTSTRAP_SERVERS="localhost:29092"
KAFKA_CONSUMER_GROUP="osint-processors"
KAFKA_AUTO_OFFSET_RESET="earliest"  # earliest, latest
KAFKA_MAX_POLL_RECORDS=500

# Kafka Topics
KAFKA_TOPIC_RAW_FEEDS="raw-feeds"
KAFKA_TOPIC_PROCESSED_ARTICLES="processed-articles"
KAFKA_TOPIC_EXTRACTED_CLAIMS="extracted-claims"
KAFKA_TOPIC_GRAPH_UPDATES="graph-updates"
KAFKA_TOPIC_ALERTS="alerts"

# ==========================================
# Ollama LLM Configuration
# ==========================================
OLLAMA_BASE_URL="http://localhost:11434"
OLLAMA_MODEL="deepseek-v3"  # or llama3:70b
OLLAMA_TIMEOUT=120
OLLAMA_TEMPERATURE=0.7
OLLAMA_MAX_TOKENS=2048

# ==========================================
# Model Paths & Settings
# ==========================================
# NLI Model (for fact verification)
NLI_MODEL_NAME="microsoft/deberta-v3-base"
NLI_MODEL_PATH="./models/nli_model"

# Embedding Model (for semantic similarity)
EMBEDDING_MODEL_NAME="sentence-transformers/all-MiniLM-L6-v2"
EMBEDDING_DIMENSION=384

# Spacy Model (for NER)
SPACY_MODEL="en_core_web_sm"

# ==========================================
# Redis Configuration (Optional)
# ==========================================
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=""
REDIS_CACHE_TTL=3600  # seconds

# ==========================================
# PostgreSQL Configuration (Optional)
# ==========================================
POSTGRES_HOST="localhost"
POSTGRES_PORT=5432
POSTGRES_DB="osint_metadata"
POSTGRES_USER="osint_user"
POSTGRES_PASSWORD="osint_pg_pass_2026"

# ==========================================
# API Configuration
# ==========================================
API_HOST="0.0.0.0"
API_PORT=8000
API_WORKERS=4
API_RELOAD=true  # Set to false in production
API_CORS_ORIGINS='["http://localhost:3000", "http://localhost:8000"]'

# API Keys (if implementing authentication)
API_SECRET_KEY="your-secret-key-here-change-in-production"
API_ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==========================================
# Data Source API Keys
# ==========================================
# Twitter/X API
TWITTER_API_KEY=""
TWITTER_API_SECRET=""
TWITTER_BEARER_TOKEN=""
TWITTER_ACCESS_TOKEN=""
TWITTER_ACCESS_TOKEN_SECRET=""

# Reddit API
REDDIT_CLIENT_ID=""
REDDIT_CLIENT_SECRET=""
REDDIT_USER_AGENT="OSINT-Analyst/0.1.0"

# News API (optional)
NEWS_API_KEY=""

# ==========================================
# Web Scraping Configuration
# ==========================================
SCRAPER_USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36"
SCRAPER_REQUEST_TIMEOUT=30
SCRAPER_MAX_RETRIES=3
SCRAPER_RATE_LIMIT_DELAY=2  # seconds between requests

# ==========================================
# Processing Configuration
# ==========================================
# Crawler settings
CRAWLER_FETCH_INTERVAL=300  # seconds (5 minutes)
CRAWLER_MAX_ARTICLES_PER_RUN=100

# Agent settings
AGENT_MAX_ITERATIONS=10
AGENT_TIMEOUT=300  # seconds

# Confidence thresholds
MIN_CLAIM_CONFIDENCE=0.6
MIN_ENTITY_CONFIDENCE=0.7
MIN_NLI_CONFIDENCE=0.75

# ==========================================
# Monitoring & Observability
# ==========================================
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TRACING=false

# ==========================================
# Security Settings
# ==========================================
ALLOWED_HOSTS='["localhost", "127.0.0.1"]'
ENABLE_RATE_LIMITING=true
RATE_LIMIT_PER_MINUTE=60

# ==========================================
# Feature Flags
# ==========================================
ENABLE_TWITTER_CRAWLER=false  # Requires API keys
ENABLE_REDDIT_CRAWLER=true
ENABLE_RSS_CRAWLER=true
ENABLE_WEB_SCRAPER=true
ENABLE_BIAS_DETECTION=true
ENABLE_FACT_VERIFICATION=true
